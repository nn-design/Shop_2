
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AjaxTest</title>
    <script src="/Statics/adminlte/plugins/jquery/jquery.min.js"></script>
</head>
<body>
    <div>姓名：<input type="text" name="name" id="name" value="" /></div>
    <div>年龄：<input type="text" name="age" id="age" value="" /></div>
    <div>
        <button id="btn">ajax测试</button>
    </div>
    <script>
        $(function () {

            $("#btn").on("click", function () {
                var ajaxData = { name: $("#name").val(), age: $("#age").val() };
                //发起ajax请求
                $.ajax({

                    //指定请求地址
                    url: "/ProductCategory/AjaxTestPost",
                    //指定请求方式：GET、POST
                    type: "POST",
                    //期望服务端返回的数据格式(在回调函数中会自动将json串转化成js对象)
                    dataType: "json",
                    //向服务端发送的数据
                    data: ajaxData,
                    //当请求成功之后的回调函数，一般在接收服务端返回的数据
                    // {"State":true}
                    success: function (result) {//result参数代表服务端返回的数据

                        alert(result.state)
                    },
                    //当请求失败之后的回调函数
                    error: function (result) {//result参数代表服务端返回的数据

                    }
                })
            })
        })

    </script>
</body>
</html>
