
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4>商品分类列表</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">首页</a></li>
                    <li class="breadcrumb-item active">商品分类</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-header">
                    <a class="btn btn-sm btn-primary" href="/ProductCategory/add">添加商品分类</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="table"style="width:100%" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                <thead>
                                    <tr role="row">
                                        <th></th>
                                        <th>序号</th>
                                        <th>分类名称</th>
                                        <th>排序号</th>
                                        <th>分类图标</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>

    <div class="modal fade" id="del-modal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">提示框</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>确定要删除吗？</p>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">否</button>
                    <button type="button" class="btn btn-primary" onclick="del()">是</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</section>

@section js{
<script>
    var delID = null

    function del() {
        if (!delID) {
            return;
        }
        //发起ajax请求
         $.ajax({
            type: "POST",
            url: "/ProductCategory/Delete",
             cache: false,//禁用缓存
             data: { id: delID },//传入组装的参数
            dataType: "json",
             success: function (result) {
                 if (result.state) {

                     toastr.success("删除成功")
                     $("#del-modal").modal("hide")//模态窗口关掉
                     //刷新dataTables
                     $('#table').DataTable().ajax.reload();
                 }
                
            }
        });
       
    }
    function alertDelModal(id) {
        delID = id;
        $("#del-modal").modal()
       
    }
    $(function () {
        //$("#example1").DataTable();
        $('#table').DataTable({
            "paging": false,//禁止分页
            "lengthChange": false,//不显示更改每页大小的下拉框
            "searching": false,//不显示搜索框
            "ordering": false,//禁止排序
            "info": false,//不显示备注信息
            //"autoWidth": false,
            "autoWidth": true,//宽度自适应
            "processing": true,//开启加载等待
            "language": {

                "processing":"请求数据中...",//加载数据时的提示信息
                "zeroRecords":"没有数据",//无数据时的提示
            },
            'treeGrid': {
                'left': 15,
                'expandIcon': '<span><i class="fa fa-plus-square"></i></span>',
                'collapseIcon': '<span><i class="fa fa-minus-square"></i></span>'
            },
            "serverSide": true,//开启服务端模式（从后台获取）

            "ajax": function (data, callback, settings) {
                
                //封装请求参数
                var param = {};
                //param.pageSize = data.length;//页面显示记录条数，在页面显示每页多少项的时候
                //param.pageNum = (data.start / data.length) + 1;//显示页码
                param.draw = data.draw;//为了保证请求一致性，服务端直接返回就可以，不需要更改
                //ajax请求数据
                $.ajax({
                    type: "POST",
                    url: "/ProductCategory/GetAll",
                    cache: false,//禁用缓存
                    data: param,//传入组装的参数
                    dataType: "json",
                    success: function (result) {
                        
                        setTimeout(function () {
                            callback(result);//渲染数据
                        }, 500);//请求时长500
                    }
                });
            },
            //设置数据映射
            columns: [
                {
                    className: 'treegrid-control',
                    data: function (data) {
                        
                        if (data.children.length > 0) {
                            return '<span><i class="fa fa-plus-square"></i></span>';
                        }
                        return '';
                    }
                },
                
                { "data": "ID" },
                { "data": "Name" },
                { "data": "OrderNum" },
                {
                    "data": function (data) {
                        //var image = (eval('({"Url":"http://localhost:56568/Upload/Product/CategoryImages/7a0de0069ed4403cadb3cdf581e2f7ad836386.jpg","CloudUrl":"http://myshop.products.nmzyy.cn//Upload/Product/CategoryImages/7a0de0069ed4403cadb3cdf581e2f7ad836386.jpg"})'))
                        //console.log(image.Url)
                        //console.log(image.CloudUrl)
                        console.log(data.Img)
                        var html = "<img src=\"" + data.Img + "\" width=\"50\" height=\"50\" /> ";
                        return html;
                    }
                },
                {
                    "data": function (data) {

                        console.log(data)
                        var html = "<a href=\"/ProductCategory/Update/" + data.ID + " \" class=\"btn btn-sm btn-primary\">编辑</a>";
                        
                        var path = data.Path
                        console.log(path)
                        if (path.split(',').length==3 ) {
                            html += "&nbsp;&nbsp;"
                            html += "<a href=\"/ProductAttrKeySku/List?id=" + data.ID + "\" class=\"btn btn-sm btn-default\" style:\"width=30px\" >规格设置</a>";
                            html += "&nbsp;&nbsp;"
                            html += "<a href=\"/ProductAttrKey/List?id=" + data.ID + "\" class=\"btn btn-sm btn-default\" style:\"width=30px\" >属性设置</a>";

                        }
                        html += "&nbsp;&nbsp;"
                        html += "<a href=\"#\" class=\"btn btn-sm btn-danger\" onclick=\"alertDelModal(" + data.ID + ")\">删除</a>";
                        return html;
                    }
                }
            ]
        });
    });
</script>   
}

